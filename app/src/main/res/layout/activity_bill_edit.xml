<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.bills.BillEditActivity">

    <TextView
        android:id="@+id/textView_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/editText_note"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="8dp"
        android:background="@color/gray_da"
        android:cursorVisible="true"
        android:ems="10"
        android:gravity="top|start"
        android:hint="@string/note_input_hint"
        android:inputType="textMultiLine"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:textCursorDrawable="@null"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout_keyboardBorder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_amount" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_keyboardBorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_da"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_numericKeyboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/button_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="@drawable/selector_numeric_keyboard"
                android:text="1"
                android:textColor="@android:color/black"
                app:backgroundTint="@null"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/button_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:background="@drawable/selector_numeric_keyboard"
                android:text="2"
                android:textColor="@android:color/black"
                app:backgroundTint="@null"
                app:layout_constraintBaseline_toBaselineOf="@+id/button_1"
                app:layout_constraintLeft_toRightOf="@id/button_1" />

            <Button
                android:id="@+id/button_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:background="@drawable/selector_numeric_keyboard"
                android:text="3"
                android:textColor="@android:color/black"
                app:backgroundTint="@null"
                app:layout_constraintBaseline_toBaselineOf="@+id/button_2"
                app:layout_constraintLeft_toRightOf="@id/button_2" />

            <Button
                android:id="@+id/button_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="@drawable/selector_numeric_keyboard"
                android:text="4"
                android:textColor="@android:color/black"
                app:backgroundTint="@null"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_1" />

            <Button
                android:id="@+id/button_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="@drawable/selector_numeric_keyboard"
                android:text="5"
                android:textColor="@android:color/black"
                app:backgroundTint="@null"
                app:layout_constraintLeft_toLeftOf="@id/button_2"
                app:layout_constraintTop_toBottomOf="@id/button_2" />

            <Button
                android:id="@+id/button_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="@drawable/selector_numeric_keyboard"
                android:text="6"
                android:textColor="@android:color/black"
                app:backgroundTint="@null"
                app:layout_constraintLeft_toLeftOf="@id/button_3"
                app:layout_constraintTop_toBottomOf="@id/button_3" />

            <Button
                android:id="@+id/button_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="@drawable/selector_numeric_keyboard"
                android:text="7"
                android:textColor="@android:color/black"
                app:backgroundTint="@null"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_4" />

            <Button
                android:id="@+id/button_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="@drawable/selector_numeric_keyboard"
                android:text="8"
                android:textColor="@android:color/black"
                app:backgroundTint="@null"
                app:layout_constraintLeft_toLeftOf="@id/button_5"
                app:layout_constraintTop_toBottomOf="@id/button_5" />

            <Button
                android:id="@+id/button_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="@drawable/selector_numeric_keyboard"
                android:text="9"
                android:textColor="@android:color/black"
                app:backgroundTint="@null"
                app:layout_constraintLeft_toLeftOf="@id/button_6"
                app:layout_constraintTop_toBottomOf="@id/button_6" />

            <Button
                android:id="@+id/button_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="@drawable/selector_numeric_keyboard"
                android:text="0"
                android:textColor="@android:color/black"
                app:backgroundTint="@null"
                app:layout_constraintLeft_toLeftOf="@id/button_8"
                app:layout_constraintTop_toBottomOf="@id/button_8" />

            <Button
                android:id="@+id/button_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="@drawable/selector_numeric_keyboard"
                android:text="@string/numeric_keyboard_clear"
                android:textColor="@android:color/black"
                app:backgroundTint="@null"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_7" />

            <Button
                android:id="@+id/button_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="@drawable/selector_numeric_keyboard"
                android:text="."
                android:textColor="@android:color/black"
                app:backgroundTint="@null"
                app:layout_constraintLeft_toLeftOf="@id/button_9"
                app:layout_constraintTop_toBottomOf="@id/button_9" />

            <Button
                android:id="@+id/button_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:background="@drawable/selector_numeric_keyboard"
                android:text="@string/numeric_keyboard_delete"
                android:textColor="@android:color/black"
                app:backgroundTint="@null"
                app:layout_constraintBaseline_toBaselineOf="@+id/button_3"
                app:layout_constraintLeft_toRightOf="@id/button_3" />

            <Button
                android:id="@+id/button_confirm"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/selector_numeric_keyboard"
                android:text="@string/numeric_keyboard_confirm"
                android:textColor="@android:color/black"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="@id/button_dot"
                app:layout_constraintLeft_toLeftOf="@id/button_delete"
                app:layout_constraintRight_toRightOf="@id/button_delete"
                app:layout_constraintTop_toBottomOf="@id/button_delete" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="144dp" />


</androidx.constraintlayout.widget.ConstraintLayout>